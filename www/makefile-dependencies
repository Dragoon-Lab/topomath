# Packages to install for build to work
# execute 'make -f makefile-dependencies' in terminal to run this
# run this in /www folder
install:
	npm install gulp --save-dev
	npm install gulp-cached --save-dev
	npm install gulp-jshint-cached --save-dev
	npm install gulp-shell --save-dev
	npm install gulp-replace --save-dev
	npm install gulp-zip --save-dev
	npm install fs --save-dev
	npm install jshint-stylish --save-dev
	npm install chai --save-dev
	npm install connect --save-dev
	npm install gulp-mocha --save-dev
	npm install webdriver --save-dev
	npm install webdriverio --save-dev
	npm install semver --save-dev
	npm install serve-static --save-dev
	npm install wdio-mocha-framework --save-dev
	npm install wdio-screenshot --save-dev
	npm install wdio-selenium-standalone-service --save-dev
	npm install wdio-spec-reporter --save-dev